<?xml version='1.0' encoding='utf-8'?>
<widget id="com.santiago.girassol" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Girassol</name>
    <description>
        Trabalho de conclusão de curso. Teste do instituto DELETE para detecção de depressão.
    </description>
    <author email="eikesantz@gmail.com" href="https://github.com/EikeSan">
        Desenvolvido por @EikeSan, ideia por @KarllaSouza.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
        <allow-intent href="market:*" />
        <icon density="mdpi" height="57" platform="android" src="www/img/logo.png" width="57" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="28" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.5" />
</widget>
